# Supabase Edge Functions Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# Logging Configuration
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel,text/csv

# External API Configuration
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# Forecast Configuration
FORECAST_DEFAULT_ALGORITHM=linear_regression
FORECAST_DEFAULT_PERIODS=12
FORECAST_CONFIDENCE_LEVEL=0.95
FORECAST_MAX_PERIODS=24

# Professional Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_MAX_RETRIES=3
SYNC_TIMEOUT=60000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Cache Configuration
CACHE_TTL=300
CACHE_ENABLED=true

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000

# Business Rules Configuration
MIN_HISTORICAL_PERIODS=3
MAX_FORECAST_PERIODS=24
DEFAULT_CONFIDENCE_LEVEL=0.95
OUTLIER_DETECTION_THRESHOLD=1.5

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@your-domain.com

# HITSS Automation Configuration
HITSS_USER=your_hitss_username
HITSS_PASS=your_hitss_password
POSTMARK_TOKEN=your_postmark_server_token

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=10000

# Development Configuration
DEV_MODE=true
DEBUG_ENABLED=false
MOCK_EXTERNAL_APIS=false